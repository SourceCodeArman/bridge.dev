{
  "id": "google_sheets",
  "name": "Google Sheets",
  "version": "1.0.0",
  "description": "Read and write data to Google Sheets with OAuth authentication",
  "author": "Bridge.dev",
  "connector_type": "action",
  "auth_config": {
    "type": "oauth",
    "fields": [
      {
        "name": "client_id",
        "type": "string",
        "required": true,
        "description": "OAuth Client ID from Google Cloud Console"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "OAuth Client Secret from Google Cloud Console"
      },
      {
        "name": "access_token",
        "type": "password",
        "required": false,
        "description": "OAuth access token (generated automatically)",
        "hidden": true
      },
      {
        "name": "refresh_token",
        "type": "password",
        "required": false,
        "description": "OAuth refresh token (generated automatically)",
        "hidden": true
      },
      {
        "name": "service_account_key",
        "type": "object",
        "required": false,
        "description": "Service account key JSON (alternative to OAuth)"
      }
    ]
  },
  "actions": [
    {
      "id": "read_range",
      "name": "Read Range",
      "description": "Read data from a sheet range",
      "input_schema": {
        "type": "object",
        "ui:order": [
          "spreadsheet_id",
          "worksheet_name",
          "range"
        ],
        "required": [
          "spreadsheet_id",
          "range"
        ],
        "properties": {
          "spreadsheet_id": {
            "type": "string",
            "description": "Google Sheets spreadsheet ID (from URL)",
            "ui:component": "google_spreadsheet_selector"
          },
          "worksheet_name": {
            "type": "string",
            "description": "Worksheet (tab) name",
            "ui:component": "google_worksheet_selector"
          },
          "range": {
            "type": "string",
            "description": "Cell range to read (e.g., \"A1:B10\")"
          }
        }
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "values": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "description": "Array of rows, each row is an array of cell values"
          }
        }
      },
      "required_fields": [
        "spreadsheet_id",
        "range"
      ]
    },
    {
      "id": "write_range",
      "name": "Write Range",
      "description": "Write data to a sheet range (overwrites existing data)",
      "input_schema": {
        "type": "object",
        "ui:order": [
          "spreadsheet_id",
          "worksheet_name",
          "range",
          "values"
        ],
        "required": [
          "spreadsheet_id",
          "range",
          "values"
        ],
        "properties": {
          "spreadsheet_id": {
            "type": "string",
            "description": "Google Sheets spreadsheet ID",
            "ui:component": "google_spreadsheet_selector"
          },
          "worksheet_name": {
            "type": "string",
            "description": "Worksheet (tab) name",
            "ui:component": "google_worksheet_selector"
          },
          "range": {
            "type": "string",
            "description": "Cell range to write (e.g., \"A1:B10\")"
          },
          "values": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "description": "Array of rows to write, each row is an array of cell values"
          }
        }
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "updated_cells": {
            "type": "integer",
            "description": "Number of cells updated"
          },
          "updated_range": {
            "type": "string",
            "description": "Range that was updated"
          }
        }
      },
      "required_fields": [
        "spreadsheet_id",
        "range",
        "values"
      ]
    },
    {
      "id": "append_rows",
      "name": "Append Rows",
      "description": "Append rows to the end of a sheet range",
      "input_schema": {
        "type": "object",
        "ui:order": [
          "spreadsheet_id",
          "worksheet_name",
          "values"
        ],
        "required": [
          "spreadsheet_id",
          "values"
        ],
        "properties": {
          "spreadsheet_id": {
            "type": "string",
            "description": "Google Sheets spreadsheet ID",
            "ui:component": "google_spreadsheet_selector"
          },
          "worksheet_name": {
            "type": "string",
            "description": "Worksheet (tab) name",
            "ui:component": "google_worksheet_selector"
          },
          "values": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "description": "Array of rows to append, each row is an array of cell values"
          }
        }
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "updated_cells": {
            "type": "integer",
            "description": "Number of cells updated"
          },
          "updated_range": {
            "type": "string",
            "description": "Range that was updated"
          },
          "rows_appended": {
            "type": "integer",
            "description": "Number of rows appended"
          }
        }
      },
      "required_fields": [
        "spreadsheet_id",
        "range",
        "values"
      ]
    },
    {
      "id": "clear_range",
      "name": "Clear Range",
      "description": "Clear data from a sheet range",
      "input_schema": {
        "type": "object",
        "ui:order": [
          "spreadsheet_id",
          "worksheet_name",
          "range"
        ],
        "required": [
          "spreadsheet_id",
          "range"
        ],
        "properties": {
          "spreadsheet_id": {
            "type": "string",
            "description": "Google Sheets spreadsheet ID",
            "ui:component": "google_spreadsheet_selector"
          },
          "worksheet_name": {
            "type": "string",
            "description": "Worksheet (tab) name",
            "ui:component": "google_worksheet_selector"
          },
          "range": {
            "type": "string",
            "description": "Cell range to clear (e.g., \"A1:B10\")"
          }
        }
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "cleared_range": {
            "type": "string",
            "description": "Range that was cleared"
          }
        }
      },
      "required_fields": [
        "spreadsheet_id",
        "range"
      ]
    },
    {
      "id": "create_spreadsheet",
      "name": "Create Spreadsheet",
      "description": "Create a new Google Spreadsheet",
      "input_schema": {
        "type": "object",
        "required": [
          "title"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the new spreadsheet"
          }
        }
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "spreadsheet_id": {
            "type": "string",
            "description": "ID of the created spreadsheet"
          },
          "spreadsheet_url": {
            "type": "string",
            "description": "URL of the created spreadsheet"
          }
        }
      },
      "required_fields": [
        "title"
      ]
    },
    {
      "id": "add_worksheet",
      "name": "Add Worksheet",
      "description": "Add a new worksheet (tab) to a spreadsheet",
      "input_schema": {
        "type": "object",
        "required": [
          "spreadsheet_id",
          "title"
        ],
        "properties": {
          "spreadsheet_id": {
            "type": "string",
            "description": "Google Sheets spreadsheet ID",
            "ui:component": "google_spreadsheet_selector"
          },
          "title": {
            "type": "string",
            "description": "Title of the new worksheet"
          }
        }
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "sheet_id": {
            "type": "integer",
            "description": "ID of the created worksheet"
          },
          "title": {
            "type": "string",
            "description": "Title of the created worksheet"
          }
        }
      },
      "required_fields": [
        "spreadsheet_id",
        "title"
      ]
    },
    {
      "id": "list_worksheets",
      "name": "List Worksheets",
      "description": "List all worksheets in a spreadsheet",
      "input_schema": {
        "type": "object",
        "required": [
          "spreadsheet_id"
        ],
        "properties": {
          "spreadsheet_id": {
            "type": "string",
            "description": "Google Sheets spreadsheet ID",
            "ui:component": "google_spreadsheet_selector"
          }
        }
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "worksheets": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "sheet_id": {
                  "type": "integer"
                },
                "title": {
                  "type": "string"
                },
                "index": {
                  "type": "integer"
                }
              }
            },
            "description": "List of worksheets in the spreadsheet"
          }
        }
      },
      "required_fields": [
        "spreadsheet_id"
      ]
    }
  ]
}