{
    "id": "google-calendar",
    "name": "Google Calendar",
    "version": "1.0.0",
    "description": "Manage calendar events via Google Calendar API with OAuth authentication",
    "author": "Bridge.dev",
    "connector_type": "action",
    "auth_config": {
        "type": "oauth",
        "fields": [
            {
                "name": "client_id",
                "type": "string",
                "required": true,
                "description": "OAuth Client ID from Google Cloud Console"
            },
            {
                "name": "client_secret",
                "type": "password",
                "required": true,
                "description": "OAuth Client Secret from Google Cloud Console"
            },
            {
                "name": "access_token",
                "type": "password",
                "required": false,
                "description": "OAuth access token (generated automatically)",
                "hidden": true
            },
            {
                "name": "refresh_token",
                "type": "password",
                "required": false,
                "description": "OAuth refresh token (generated automatically)",
                "hidden": true
            }
        ]
    },
    "actions": [
        {
            "id": "create_event",
            "name": "Create Event",
            "description": "Create a new calendar event",
            "input_schema": {
                "type": "object",
                "ui:order": [
                    "calendar_id",
                    "summary",
                    "description",
                    "location",
                    "start_time",
                    "end_time",
                    "timezone",
                    "attendees",
                    "send_notifications",
                    "reminders",
                    "recurrence",
                    "visibility"
                ],
                "required": [
                    "summary",
                    "start_time",
                    "end_time"
                ],
                "properties": {
                    "calendar_id": {
                        "type": "string",
                        "default": "primary",
                        "description": "Calendar ID (default: primary)",
                        "ui:component": "google_calendar_selector"
                    },
                    "summary": {
                        "type": "string",
                        "description": "Event title/summary"
                    },
                    "description": {
                        "type": "string",
                        "description": "Event description"
                    },
                    "location": {
                        "type": "string",
                        "description": "Event location"
                    },
                    "start_time": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Start time"
                    },
                    "end_time": {
                        "type": "string",
                        "format": "date-time",
                        "description": "End time"
                    },
                    "timezone": {
                        "type": "string",
                        "default": "UTC",
                        "description": "Timezone (e.g., America/Los_Angeles)"
                    },
                    "attendees": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "format": "email"
                        },
                        "description": "List of attendee email addresses"
                    },
                    "send_notifications": {
                        "type": "boolean",
                        "default": true,
                        "description": "Whether to send notifications to attendees"
                    },
                    "reminders": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "method": {
                                    "type": "string",
                                    "enum": [
                                        "email",
                                        "popup"
                                    ],
                                    "description": "Reminder method"
                                },
                                "minutes": {
                                    "type": "integer",
                                    "description": "Minutes before event"
                                }
                            }
                        },
                        "description": "Custom reminders"
                    },
                    "recurrence": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "RRULE recurrence rules (e.g., RRULE:FREQ=WEEKLY;COUNT=5)"
                    },
                    "visibility": {
                        "type": "string",
                        "enum": [
                            "default",
                            "public",
                            "private",
                            "confidential"
                        ],
                        "default": "default",
                        "description": "Event visibility"
                    }
                }
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Event ID"
                    },
                    "html_link": {
                        "type": "string",
                        "description": "Link to view event in Google Calendar"
                    },
                    "status": {
                        "type": "string",
                        "description": "Event status"
                    },
                    "created": {
                        "type": "string",
                        "description": "Event creation timestamp"
                    }
                }
            },
            "required_fields": [
                "summary",
                "start_time",
                "end_time"
            ]
        },
        {
            "id": "get_event",
            "name": "Get Event",
            "description": "Get a specific calendar event by ID",
            "input_schema": {
                "type": "object",
                "ui:order": [
                    "calendar_id",
                    "event_id"
                ],
                "required": [
                    "event_id"
                ],
                "properties": {
                    "calendar_id": {
                        "type": "string",
                        "default": "primary",
                        "description": "Calendar ID (default: primary)",
                        "ui:component": "google_calendar_selector"
                    },
                    "event_id": {
                        "type": "string",
                        "description": "Event ID"
                    }
                }
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Event ID"
                    },
                    "summary": {
                        "type": "string",
                        "description": "Event title"
                    },
                    "description": {
                        "type": "string",
                        "description": "Event description"
                    },
                    "location": {
                        "type": "string",
                        "description": "Event location"
                    },
                    "start": {
                        "type": "object",
                        "description": "Start time info"
                    },
                    "end": {
                        "type": "object",
                        "description": "End time info"
                    },
                    "attendees": {
                        "type": "array",
                        "description": "List of attendees"
                    },
                    "html_link": {
                        "type": "string",
                        "description": "Link to event"
                    },
                    "status": {
                        "type": "string",
                        "description": "Event status"
                    }
                }
            },
            "required_fields": [
                "event_id"
            ]
        },
        {
            "id": "list_events",
            "name": "List Events",
            "description": "List calendar events within a time range",
            "input_schema": {
                "type": "object",
                "ui:order": [
                    "calendar_id",
                    "time_min",
                    "time_max",
                    "max_results",
                    "query",
                    "single_events",
                    "order_by"
                ],
                "properties": {
                    "calendar_id": {
                        "type": "string",
                        "default": "primary",
                        "description": "Calendar ID (default: primary)",
                        "ui:component": "google_calendar_selector"
                    },
                    "time_min": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Lower bound for event start time"
                    },
                    "time_max": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Upper bound for event start time"
                    },
                    "max_results": {
                        "type": "integer",
                        "default": 10,
                        "minimum": 1,
                        "maximum": 2500,
                        "description": "Maximum number of events to return"
                    },
                    "query": {
                        "type": "string",
                        "description": "Free text search terms"
                    },
                    "single_events": {
                        "type": "boolean",
                        "default": true,
                        "description": "Expand recurring events into single events"
                    },
                    "order_by": {
                        "type": "string",
                        "enum": [
                            "startTime",
                            "updated"
                        ],
                        "default": "startTime",
                        "description": "Order of events"
                    }
                }
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "events": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "summary": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "location": {
                                    "type": "string"
                                },
                                "start": {
                                    "type": "object"
                                },
                                "end": {
                                    "type": "object"
                                },
                                "html_link": {
                                    "type": "string"
                                }
                            }
                        },
                        "description": "List of events"
                    },
                    "count": {
                        "type": "integer",
                        "description": "Number of events returned"
                    }
                }
            },
            "required_fields": []
        },
        {
            "id": "update_event",
            "name": "Update Event",
            "description": "Update an existing calendar event",
            "input_schema": {
                "type": "object",
                "ui:order": [
                    "calendar_id",
                    "event_id",
                    "summary",
                    "description",
                    "location",
                    "start_time",
                    "end_time",
                    "timezone",
                    "attendees",
                    "send_notifications"
                ],
                "required": [
                    "event_id"
                ],
                "properties": {
                    "calendar_id": {
                        "type": "string",
                        "default": "primary",
                        "description": "Calendar ID (default: primary)",
                        "ui:component": "google_calendar_selector"
                    },
                    "event_id": {
                        "type": "string",
                        "description": "Event ID to update"
                    },
                    "summary": {
                        "type": "string",
                        "description": "New event title"
                    },
                    "description": {
                        "type": "string",
                        "description": "New event description"
                    },
                    "location": {
                        "type": "string",
                        "description": "New event location"
                    },
                    "start_time": {
                        "type": "string",
                        "format": "date-time",
                        "description": "New start time"
                    },
                    "end_time": {
                        "type": "string",
                        "format": "date-time",
                        "description": "New end time"
                    },
                    "timezone": {
                        "type": "string",
                        "description": "Timezone"
                    },
                    "attendees": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "format": "email"
                        },
                        "description": "Updated list of attendees"
                    },
                    "send_notifications": {
                        "type": "boolean",
                        "default": true,
                        "description": "Whether to send update notifications"
                    }
                }
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Event ID"
                    },
                    "html_link": {
                        "type": "string",
                        "description": "Link to event"
                    },
                    "status": {
                        "type": "string",
                        "description": "Event status"
                    },
                    "updated": {
                        "type": "string",
                        "description": "Last update timestamp"
                    }
                }
            },
            "required_fields": [
                "event_id"
            ]
        },
        {
            "id": "delete_event",
            "name": "Delete Event",
            "description": "Delete a calendar event",
            "input_schema": {
                "type": "object",
                "ui:order": [
                    "calendar_id",
                    "event_id",
                    "send_notifications"
                ],
                "required": [
                    "event_id"
                ],
                "properties": {
                    "calendar_id": {
                        "type": "string",
                        "default": "primary",
                        "description": "Calendar ID (default: primary)",
                        "ui:component": "google_calendar_selector"
                    },
                    "event_id": {
                        "type": "string",
                        "description": "Event ID to delete"
                    },
                    "send_notifications": {
                        "type": "boolean",
                        "default": true,
                        "description": "Whether to send cancellation notifications"
                    }
                }
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "description": "Whether deletion was successful"
                    },
                    "deleted_event_id": {
                        "type": "string",
                        "description": "ID of deleted event"
                    }
                }
            },
            "required_fields": [
                "event_id"
            ]
        },
        {
            "id": "list_calendars",
            "name": "List Calendars",
            "description": "List all calendars accessible to the user",
            "input_schema": {
                "type": "object",
                "ui:order": [
                    "show_hidden"
                ],
                "properties": {
                    "show_hidden": {
                        "type": "boolean",
                        "default": false,
                        "description": "Include hidden calendars"
                    }
                }
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "calendars": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "description": "Calendar ID"
                                },
                                "summary": {
                                    "type": "string",
                                    "description": "Calendar name"
                                },
                                "description": {
                                    "type": "string",
                                    "description": "Calendar description"
                                },
                                "timezone": {
                                    "type": "string",
                                    "description": "Calendar timezone"
                                },
                                "access_role": {
                                    "type": "string",
                                    "description": "User's access role"
                                },
                                "primary": {
                                    "type": "boolean",
                                    "description": "Whether this is the primary calendar"
                                }
                            }
                        },
                        "description": "List of calendars"
                    },
                    "count": {
                        "type": "integer",
                        "description": "Number of calendars"
                    }
                }
            },
            "required_fields": []
        },
        {
            "id": "find_free_busy",
            "name": "Find Free/Busy",
            "description": "Check free/busy availability for calendars",
            "input_schema": {
                "type": "object",
                "ui:order": [
                    "calendar_id",
                    "time_min",
                    "time_max",
                    "timezone"
                ],
                "required": [
                    "time_min",
                    "time_max"
                ],
                "properties": {
                    "calendar_id": {
                        "type": "string",
                        "default": "primary",
                        "description": "Calendar ID (default: primary)",
                        "ui:component": "google_calendar_selector"
                    },
                    "time_min": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Start of the interval"
                    },
                    "time_max": {
                        "type": "string",
                        "format": "date-time",
                        "description": "End of the interval"
                    },
                    "timezone": {
                        "type": "string",
                        "default": "UTC",
                        "description": "Timezone for results"
                    }
                }
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "calendars": {
                        "type": "object",
                        "description": "Free/busy info per calendar",
                        "additionalProperties": {
                            "type": "object",
                            "properties": {
                                "busy": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "start": {
                                                "type": "string"
                                            },
                                            "end": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "required_fields": [
                "time_min",
                "time_max"
            ]
        }
    ]
}