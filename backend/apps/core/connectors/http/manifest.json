{
  "id": "http",
  "name": "HTTP Request",
  "version": "1.0.0",
  "description": "Make HTTP requests to any endpoint with URL templating and response parsing",
  "author": "Bridge.dev",
  "connector_type": "action",
  "auth_config": {
    "type": "custom",
    "fields": [
      {
        "name": "headers",
        "type": "object",
        "required": false,
        "description": "Custom headers to include in all requests"
      }
    ]
  },
  "actions": [
    {
      "id": "get",
      "name": "GET Request",
      "description": "Make an HTTP GET request to retrieve data",
      "input_schema": {
        "type": "object",
        "required": [
          "url"
        ],
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "description": "URL to request (supports Jinja2 templating with {{step1.output.field}} syntax)"
          },
          "headers": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            },
            "description": "HTTP headers (supports templating)"
          },
          "params": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            },
            "description": "URL query parameters (supports templating)"
          },
          "timeout": {
            "type": "number",
            "description": "Request timeout in seconds (default: 30)",
            "default": 30
          }
        }
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "status_code": {
            "type": "integer",
            "description": "HTTP status code"
          },
          "body": {
            "type": [
              "object",
              "string",
              "null"
            ],
            "description": "Response body (parsed if JSON/XML)"
          },
          "headers": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            },
            "description": "Response headers"
          },
          "raw_body": {
            "type": "string",
            "description": "Raw response body as string"
          }
        }
      }
    },
