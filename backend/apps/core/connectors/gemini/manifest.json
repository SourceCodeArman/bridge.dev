{
  "id": "gemini",
  "name": "Google Gemini",
  "version": "1.0.0",
  "description": "Google Gemini models for text generation",
  "author": "Bridge.dev",
  "connector_type": "action",
  "auth_config": {
    "type": "api_key",
    "fields": [
      {
        "name": "api_key",
        "type": "password",
        "required": true,
        "description": "Google Gemini API key"
      }
    ]
  },
  "actions": [
    {
      "id": "generate_text",
      "name": "Generate Text",
      "description": "Generate text using Google Gemini models",
      "input_schema": {
        "type": "object",
        "required": ["prompt"],
        "properties": {
          "prompt": {
            "type": "string",
            "description": "The prompt to generate text from",
            "maxLength": 50000
          },
          "model": {
            "type": "string",
            "description": "Model to use (e.g., gemini-pro, gemini-pro-vision)",
            "default": "gemini-pro"
          },
          "temperature": {
            "type": "number",
            "description": "Sampling temperature (0.0-2.0)",
            "minimum": 0.0,
            "maximum": 2.0,
            "default": 1.0
          },
          "max_tokens": {
            "type": "integer",
            "description": "Maximum tokens to generate",
            "minimum": 1,
            "maximum": 8192,
            "default": 2048
          }
        }
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "description": "Generated text"
          },
          "model_used": {
            "type": "string",
            "description": "Model that was used"
          },
          "finish_reason": {
            "type": "string",
            "description": "Reason for completion (STOP, MAX_TOKENS, etc.)"
          },
          "usage": {
            "type": "object",
            "properties": {
              "prompt_tokens": {
                "type": "integer"
              },
              "completion_tokens": {
                "type": "integer"
              },
              "total_tokens": {
                "type": "integer"
              }
            }
          }
        }
      },
      "required_fields": ["prompt"]
    }
  ]
}

